<script>
    let globalData = {}; // Pour stocker les donn√©es propres

    function processFile(input) {
        if (input.files.length === 0) return;
        document.getElementById('loader').style.display = 'flex';
        
        const reader = new FileReader();
        reader.onload = function(e) {
            const content = e.target.result;
            // REGEX PUISSANTE POUR TROUVER LE JSON PEU IMPORTE LE BORDEL AUTOUR
            const match = content.match(/\{"[\s\S]*"\}/g);
            
            if (match) {
                // On prend le plus long match JSON trouv√© (souvent le bon dans un fichier HTML)
                try {
                    const cleanJson = match.sort((a,b) => b.length - a.length)[0];
                    globalData = JSON.parse(cleanJson);
                    initInterface(globalData);
                } catch (err) {
                    alert("Erreur de lecture du fichier. Le format est trop endommag√©.");
                    document.getElementById('loader').style.display = 'none';
                }
            } else {
                alert("Impossible de trouver les donn√©es des photos dans ce fichier.");
                document.getElementById('loader').style.display = 'none';
            }
        };
        reader.readAsText(input.files[0]);
    }

    function initInterface(data) {
        document.getElementById('welcome').style.display = 'none';
        document.getElementById('interface').style.display = 'flex';
        document.getElementById('btn-save').style.display = 'inline-block';
        
        const sidebar = document.getElementById('sidebar');
        sidebar.innerHTML = '';
        const buildings = Object.keys(data);
        
        buildings.forEach((bat, index) => {
            const div = document.createElement('div');
            div.className = 'bat-item';
            div.innerText = bat;
            div.onclick = () => {
                document.querySelectorAll('.bat-item').forEach(b => b.classList.remove('active'));
                div.classList.add('active');
                renderBuilding(bat, data[bat]);
            };
            sidebar.appendChild(div);
            // Ouvrir le premier automatiquement
            if(index === 0) div.click();
        });
        
        document.getElementById('loader').style.display = 'none';
    }

    function renderBuilding(name, photos) {
        const area = document.getElementById('main-area');
        area.innerHTML = `<h2 style="width:100%; border-bottom:2px solid #CCA43B; padding-bottom:10px; color:#0A1A3C;">üè¢ ${name} (${photos.length} photos)</h2>`;
        
        photos.forEach(photo => {
            const card = document.createElement('div');
            card.className = 'card';
            card.innerHTML = `
                <div class="card-img">
                    <img src="${photo.src}" loading="lazy">
                </div>
                <div class="card-txt" contenteditable="true">
                    ${photo.txt || "<em>Aucune description (Cliquez pour √©crire)</em>"}
                </div>
            `;
            // Sauvegarde automatique en m√©moire locale si on modifie le texte
            card.querySelector('.card-txt').addEventListener('input', (e) => {
                photo.txt = e.target.innerHTML;
            });
            area.appendChild(card);
        });
    }

    function sauvegarder() {
        // Recr√©er un fichier HTML propre autonome
        const jsonStr = JSON.stringify(globalData);
        const htmlContent = `
<!DOCTYPE html>
<html><head><meta charset="UTF-8"><title>RAPPORT CCAS V9.2</title>
<style>body{font-family:sans-serif;margin:0;padding:20px;background:#f4f4f9}
.b{background:#fff;border:1px solid #ccc;margin-bottom:20px;display:flex;flex-direction:row;}
.i{width:400px;background:#000;display:flex;align-items:center;justify-content:center;}
.i img{max-width:100%;max-height:100%;}
.t{flex:1;padding:20px;font-size:20px;line-height:1.5;}
h1{color:#0A1A3C;border-bottom:3px solid #CCA43B;}
@media print{.b{page-break-inside:avoid;}}
</style></head><body>
<div id="c"></div>
<script>
const d = ${jsonStr};
const c = document.getElementById('c');
Object.keys(d).forEach(k => {
    c.innerHTML += '<h1>'+k+'</h1>';
    d[k].forEach(p => {
        c.innerHTML += '<div class="b"><div class="i"><img src="'+p.src+'"></div><div class="t">'+(p.txt||'')+'</div></div>';
    });
});
<\/script></body></html>`;
        
        const blob = new Blob([htmlContent], {type: 'text/html'});
        const a = document.createElement('a');
        a.href = URL.createObjectURL(blob);
        a.download = 'RAPPORT_CCAS_V92_FINAL.html';
        a.click();
    }
</script>

</body>
